{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - MyShop{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande sur MyShop.</p>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action: path('order_resume')}) }}
                    {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
                    <a href="{{ path('account_address_add') }}" title="Ajouter une nouvelle adresse">Ajouter une nouvelle adresse.</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]': '<br/>', '[euro]': '&euro;'})|raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Recap de ma commande</b><br/>
                <p>Retrouvez le récapitulatif de vos produits</p>
            </div>
            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {%  if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="{{ asset('uploads/illustrations/'~product.product.illustration) }}" alt="{{ product.product.name }}" height="70px"/> </br>
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br/>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <b>Bouton pour payer</b>
        </div>
    </div>
{% endblock %}
