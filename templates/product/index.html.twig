{% extends 'base.html.twig' %}

{% block title %}Nos produits - MyShop{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos produits </h3>
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <a href="{{ path('product_show', {slug:product.slug}) }}">
                            <img class="img-fluid" src="{{ asset('uploads/illustrations/'~product.illustration) }}" alt="{{ product.name }}" />
                        </a>
                        <div class="product-item text-center">
                            <h5>{{ product.name }}</h5>
                            <span class="product-subtitle">{{ product.subtitle }}</span>
                            <span class="product-price">{{ (product.price/100)|number_format(2, ',', '.') }} &euro;</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
