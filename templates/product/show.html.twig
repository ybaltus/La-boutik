{% extends 'base.html.twig' %}

{% block title %}Nos produits - {{ product.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid" src="{{ asset('uploads/illustrations/'~product.illustration) }}" alt="{{ product.name }}" />
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }} </h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price/100)|number_format(2, ',', '.') }} &euro;</span>
            <hr>
            <p>{{ product.description }}</p>
            <hr>
            <a class="btn btn-primary" href="{{ path('cart_add', {'id': product.id}) }}" title="Ajouter au panier">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3>Nos meilleurs ventes</h3>
    <p>DÃ©couvrez les articles les plus en vues</p>
    <div class="row">
        {% for product in products %}
            <div class="col-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->
{% endblock %}
